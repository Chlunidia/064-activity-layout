<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/img_tangled" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:text="Button 1"
            app:cornerRadius="30dp"
            android:backgroundTint="@color/ungu_ketiga"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/ungu_ketiga"
            android:text="Button 2"
            app:cornerRadius="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Button"
        android:layout_marginTop="10dp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/ungu_ketiga"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Right"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/ungu_ketiga"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Left"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/ungu_ketiga"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="center"
            app:srcCompat="@drawable/arrow_left_2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="18dp"
            android:text="Select your character"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/ungu_ketiga"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:scaleType="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_right_2" />

    </LinearLayout>

</LinearLayout>